# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

    config.vm.box = "precise32"
    config.vm.box_url = "http://files.vagrantup.com/precise32.box"
    config.vm.provision :shell, :path => ".vagrant/bootstrap.sh"

    config.vm.define "wp351" do |wp351|
        wp351.vm.network :private_network, ip: "192.168.50.3"
        wp351.vm.provision :shell, :path => ".vagrant/wordpress.sh", :args => "3.5.1"
    end

    config.vm.define "wp36" do |wp36|
        wp36.vm.network :private_network, ip: "192.168.50.31"
        wp36.vm.provision :shell, :path => ".vagrant/wordpress.sh", :args => "3.6"
    end

    config.vm.define "wp37" do |wp37|
        wp37.vm.network :private_network, ip: "192.168.50.32"
        wp37.vm.provision :shell, :path => ".vagrant/wordpress.sh", :args => "3.7"
    end

    config.vm.define "wp33" do |wp33|
        wp33.vm.network :private_network, ip: "192.168.50.33"
        wp33.vm.provision :shell, :path => ".vagrant/wordpress.sh", :args => "3.3"
    end


end
